// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(cuid())
  githubId       String          @unique
  username       String
  displayName    String?         // Nome para exibir no portfólio (editável)
  email          String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  repositories   Repository[]
  portfolioItems PortfolioItem[]
  resume         Resume?
}

model Repository {
  id              Int             @id
  userId          String
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  name            String
  fullName        String
  description     String?
  htmlUrl         String
  language        String?
  stargazersCount Int
  updatedAt       DateTime
  private         Boolean
  selected        Boolean         @default(false)
  portfolioItems  PortfolioItem[]

  @@unique([userId, id])
}

model PortfolioItem {
  id               String     @id @default(cuid())
  userId           String
  user             User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  repoId           Int
  repository       Repository @relation(fields: [repoId], references: [id], onDelete: Cascade)
  objective        String?
  features         String?
  technicalSummary String?
  demoUrl          String?
  recordingUrl     String?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  @@unique([userId, repoId])
}

model Resume {
  id               String   @id @default(cuid())
  userId           String   @unique
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  originalFileName String   // Nome original do arquivo
  fileType         String   // pdf ou docx
  fileUrl          String   // URL do arquivo armazenado
  enhancedFileUrl  String?  // URL do arquivo processado pela IA (se aplicável)
  isEnhanced       Boolean  @default(false) // Se foi processado pela IA
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
